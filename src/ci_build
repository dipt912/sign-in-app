pipeline {
    agent { docker { image 'node:10.0' } }
    stages {
        stage('build') {
            steps {
                sh 'npm --version'
            }
        }
        stage('npm install') {
            sh "npm install"
        }

        stage('unit tests') {
            sh "ng test"
        }

        stage('unit tests') {
            sh "ng build --prod"
        }
    }
}
